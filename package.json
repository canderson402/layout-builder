{
  "name": "scoreboard-layout-builder",
  "version": "1.0.0",
  "description": "Web-based layout builder for creating scoreboard layouts",
  "main": "index.js",
  "_deployment_notes": {
    "site_url": "https://canderson402.github.io/layout-builder/",
    "repo": "https://github.com/canderson402/layout-builder",
    "update_steps": [
      "1. Make changes in this directory",
      "2. Commit to local repo",
      "3. Run: git subtree push --prefix layout-builder-web github-pages main",
      "4. Run: npm run deploy"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --repo https://github.com/canderson402/layout-builder.git"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "html2canvas": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native-web": "^0.19.9"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "gh-pages": "^6.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "keywords": [
    "scoreboard",
    "layout",
    "builder",
    "sports"
  ],
  "author": ""
}
